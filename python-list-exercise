# Create list with initial values
my_list = [10, 20, 30, 40]

# Insert 15 at second position
my_list.insert(1, 15)

# Add more elements using extend
my_list += [50, 60, 70]

# Remove last element
my_list.pop()

# Sort list
my_list.sort()

# Find index of 30
index_30 = my_list.index(30)

# Output
print(f"Final list: {my_list}")
print(f"Index of 30: {index_30}")
